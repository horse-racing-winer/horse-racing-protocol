{
  "name": "@horse-racing/contracts",
  "author": "Horse Racing Winer",
  "contributors": [],
  "description": "Horse Racing Winer protocol core contracts",
  "license": "MIT",
  "maintainers": [],
  "version": "0.0.3",
  "files": [
    "abi",
    "artifacts",
    "contracts",
    "deployments",
    "exports",
    "types"
  ],
  "scripts": {
    "build": "hardhat compile",
    "console": "hardhat console",
    "avax-mainnet:run": "hardhat --network avax-mainnet run",
    "avax-testnet:run": "hardhat --network avax-testnet run",
    "avax-mainnet:deploy": "hardhat --network avax-mainnet deploy",
    "avax-mainnet:verify": "hardhat --network avax-mainnet etherscan-verify --solc-input",
    "avax-mainnet:export": "hardhat --network avax-mainnet export --export exports/avax-mainnet.json",
    "avax-testnet:deploy": "hardhat --network avax-testnet deploy",
    "avax-testnet:verify": "hardhat --network avax-testnet etherscan-verify --solc-input",
    "avax-testnet:export": "hardhat --network avax-testnet export --export exports/avax-mainnet.json",
    "test": "hardhat test --verbose"
  },
  "devDependencies": {
    "@openzeppelin/upgrades": "^2.8.0",
    "hardhat": "^2.8.0"
  }
}
